datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  role      String   @default("student") // student, admin, company
  progress  UserProgress[]
  createdAt DateTime @default(now())
}

model RoadmapNode {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  orderIndex  Int
  theory      String?  @db.Text
  testData    Json?    // Сұрақтарды JSON ретінде сақтау
  progress    UserProgress[]
}

model UserProgress {
  id         Int      @id @default(autoincrement())
  userId     Int
  nodeId     Int
  isDone     Boolean  @default(false)
  score      Int      @default(0)
  user       User     @relation(fields: [userId], references: [id])
  node       RoadmapNode @relation(fields: [nodeId], references: [id])
}