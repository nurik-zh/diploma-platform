datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vacancy {
  id          String   @id @default(uuid())
  company     String
  title       String
  level       String // junior, middle, senior
  location    String
  employment  String // full-time, remote, etc.
  salaryRange String
  tags        String[]
  summary     String

  // Қарым-қатынастар (Relationships)
  questions Question[]
  tests     TestQuestion[]
  realTasks Task[]

  createdAt DateTime @default(now())
}

model Question {
  id        String  @id @default(uuid())
  question  String
  answer    String
  vacancyId String
  vacancy   Vacancy @relation(fields: [vacancyId], references: [id])
}

model TestQuestion {
  id                 String   @id @default(uuid())
  question           String
  options            String[]
  correctAnswerIndex Int
  vacancyId          String
  vacancy            Vacancy  @relation(fields: [vacancyId], references: [id])
}

model Task {
  id             String   @id @default(uuid())
  title          String
  brief          String
  requirements   String[]
  deliverables   String[]
  estimatedHours Int
  vacancyId      String
  vacancy        Vacancy  @relation(fields: [vacancyId], references: [id])

  submissions Submission[]
}

model Submission {
  id        String   @id @default(uuid())
  githubUrl String
  notes     String?
  status    String   @default("pending") // pending, reviewed, accepted
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  taskId String
  task   Task   @relation(fields: [taskId], references: [id])
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  fullName   String? // Фронтенд firstName/lastName емес, fullName күтеді
  country    String   @default("Kazakhstan")
  city       String   @default("Almaty")
  university String   @default("Satbayev University")
  firstLogin Boolean  @default(true)
  role       String   @default("student")
  createdAt  DateTime @default(now())

  progress    UserProgress[]
  roadmaps    UserRoadmap[]
  submissions Submission[]
}

model Roadmap {
  id          String        @id @default(uuid()) // Контракт: string
  title       String
  description String
  level       String // "Beginner" | "Intermediate" | "Advanced"
  recommended Boolean       @default(false)
  nodes       RoadmapNode[]
}

model RoadmapNode {
  id          String  @id @default(uuid()) // Контракт: string
  roadmapId   String
  title       String
  description String?
  orderIndex  Int
  level       String  @default("beginner") // "beginner" | "intermediate" | "advanced"
  theory      String? @db.Text
  testData    Json? // AI генерациялаған тесттер осында сақталады

  roadmap  Roadmap        @relation(fields: [roadmapId], references: [id])
  progress UserProgress[]
}

model UserRoadmap {
  id            Int      @id @default(autoincrement())
  userId        Int
  roadmapId     String
  assignedLevel String // Фронтендтің RoadmapLevel типі
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model UserProgress {
  id        Int      @id @default(autoincrement())
  userId    Int
  nodeId    String
  status    String   @default("locked") // "not_started" | "in_progress" | "completed" | "locked"
  score     Int      @default(0)
  updatedAt DateTime @updatedAt

  user User        @relation(fields: [userId], references: [id])
  node RoadmapNode @relation(fields: [nodeId], references: [id])

  @@unique([userId, nodeId])
}
