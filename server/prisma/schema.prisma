datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique
  password  String
  firstName String?
  lastName  String?
  role      String         @default("student") // student, admin, company
  progress  UserProgress[]
  createdAt DateTime       @default(now())
  roadmaps  UserRoadmap[]
}

model RoadmapNode {
  id          Int            @id @default(autoincrement())
  title       String
  description String?
  orderIndex  Int
  theory      String?        @db.Text
  testData    Json? // Сұрақтарды JSON ретінде сақтау
  progress    UserProgress[]
}

model Quiz {
  id         Int    @id @default(autoincrement())
  profession String // Мысалы: Frontend
  questions  Json // Сұрақтар мен нұсқалар жиынтығы
}

model UserRoadmap {
  id         Int      @id @default(autoincrement())
  userId     Int
  profession String
  level      String
  content    Json
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model UserProgress {
  id            Int          @id @default(autoincrement())
  userId        Int
  roadmapId     Int // МЫНА ЖЕРДІ ТЕКСЕР, МҮМКІН nodeId ДЕП ТҰРҒАН ШЫҒАР?
  stepIndex     Int
  isCompleted   Boolean      @default(true)
  completedAt   DateTime     @default(now())
  user          User         @relation(fields: [userId], references: [id])
  RoadmapNode   RoadmapNode? @relation(fields: [roadmapNodeId], references: [id])
  roadmapNodeId Int?
}
